              "name": "body",
              "description": "User object that needs to be added",
              "required": true,
              "schema": {
                "type": "object",
                "properties": {
                  "username": {
                    "type": "string",
                    "example": "testuser"
                  },
                  "email": {
                    "type": "string",
                    "example": "testuser@testuser.com"
                  },
                  "password": {
                    "type": "string",
                    "example": "password"
