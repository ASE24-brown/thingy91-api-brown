{
    "post": {
      "summary": "Add a new user",
      "description": "Add a new user to the database.",
      "tags": ["Users"],
      "consumes": ["application/json"],
      "produces": ["application/json"],
      "parameters": [
        {
          "in": "body",
          "name": "body",
          "description": "User object that needs to be added",
          "required": true,
          "schema": {
            "type": "object",
            "properties": {
              "username": {
                "type": "string",
                "example": "testuser"
              },
              "email": {
                "type": "string",
                "example": "testuser@testuser.com"
              },
              "password": {
                "type": "string",
                "example": "password"
              }
            }
          }
        }
      ],
      "responses": {
        "201": {
          "description": "User created successfully",
          "schema": {
            "type": "object",
            "properties": {
              "id": {
                "type": "integer"
              },
              "username": {
                "type": "string"
              },
              "email": {
                "type": "string"
              }
            }
          }
        },
        "400": {
          "description": "Invalid input",
          "schema": {
            "type": "object",
            "properties": {
              "error": {
                "type": "string"
              }
            }
          }
        }
      }
    }
  }